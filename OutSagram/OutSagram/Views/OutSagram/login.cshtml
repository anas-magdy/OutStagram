@model OutSagram.Models.logindata
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/libraries/boootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/libraries/fontawesome-free-5.12.1-web/css/all.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Send+Flowers&display=swap" rel="stylesheet">
    <link href="~/style/login.css" rel="stylesheet" />
    <title>login</title>
</head>
<body>
    <div class="container">
        <div class="col col-lg-5 col-md-9 col-sm-11 col-11">
            <p class="outstagram"><span>Out</span>Stagram</p>

            <form  method="post">
                <div class="row">

                    @Html.TextBoxFor(n => n.email, new { @class = "col col-10", type = "email", placeholder = "Email,username or phone" })
                    <p style="color:red;">@Html.ValidationMessageFor(n => n.email)</p>

                    @Html.PasswordFor(n => n.password, new { @class = "col col-10", type = "password", placeholder = "password" })
                    <p style="color:red;">@Html.ValidationMessageFor(n => n.password)</p>

                    @*<input class="col col-10 login_btn" type="submit" value="login" />*@
                    <button class="col col-10 login_btn" type="submit">login</button>
                    <a href="/OutSagram/regeregistration" class="col col-10 login_btn">sign up</a>

                </div>
            </form>
        </div>
    </div>



    <script src="~/libraries/boootstrap/js/jquery-3.4.1.min.js"></script>
    <script src="~/libraries/boootstrap/js/popper.min.js"></script>
    <script src="~/libraries/boootstrap/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>
